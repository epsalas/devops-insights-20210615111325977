@model FyJCel.Models.Producto
@{
    ViewData["Title"] = "Crear Producto";

    
    
}
<h1>@ViewData["Title"]</h1>
<!--
<img src="/images/gta-logo.jpg" height="300px" width="300px"><br/> -->

@{
    if(ViewBag.mensajeGrabarProducto != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@ViewBag.mensajeGrabarProducto</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    }
}

<form asp-action="RegProducto">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-group">
    <label class="control-label">Nombre del Producto:</label><br/>
    <input asp-for="prod_nombre" class="form-control"/><br/>
    <span asp-validation-for="prod_nombre" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label class="control-label">Detalles:</label><br/>
    <textarea asp-for="prod_detalle"  class="form-control" rows="6" style="resize: none;"></textarea><br/>
    <span asp-validation-for="prod_detalle" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label class="control-label">Insertar Imagen:</label><br/>
    <input type="file" asp-for="prod_imagen" class="form-control" accept="images/jpeg, images/gif"/>
    
    <br/>
  </div>
 <div class="form-group">
 		<img src="@ViewBag.Imagen" width="350" height="200">
  </div>
  <div class="form-group">
    <label class="control-label">Precio: </label><br/>
    <input asp-for="prod_precio" class="form-control-sm"/><br/>
  </div>
  
  <input type="submit" value="Grabar" class="btn btn-primary" />
</form>
<h1> 
   <!--@Html.DisplayNameFor(model => model.Mensaje)-->
    @Html.DisplayFor(model => model.Mensaje)
</h1>