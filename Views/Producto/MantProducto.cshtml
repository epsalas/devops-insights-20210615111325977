@model IEnumerable<FyJCel.Models.Producto>

<!-- bootstrap Navbar  !-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<style>
* {
  box-sizing: border-box;
}

.zoom {
  padding: 50px;
  background-color: white;
  transition: transform .2s;
  width: 200px;
  height: 100px;
  margin: 0 auto;
}

.zoom:hover {
  -ms-transform: scale(1.5); /* IE 9 */
  -webkit-transform: scale(1.5); /* Safari 3-8 */
  transform: scale(1.5); 
}
</style>

<h2>Mantenimiento de Productos</h2>


<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
               
            </th>
            <th scope="col">
                Imagen del Producto <!--@Html.DisplayNameFor(model => model.prod_imagen)-->
            </th>

            <th scope="col">
                Detalles <!--@Html.DisplayNameFor(model => model.prod_detalle)-->
            </th>
            <th scope="col">
                Precio <!--@Html.DisplayNameFor(model => model.prod_precio)-->
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model)
{
        <tr>
            <th scope="row">
                <a asp-action="EditProducto" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="DelProd" asp-route-id="@item.ID">Del</a>
            </th>
            <td class="zoom">
 				<img src="@Html.DisplayFor(modelItem => item.prod_imagen)"  width="350" height="200">
            </td>
            <td>
                <strong>
                    @Html.DisplayFor(modelItem => item.prod_nombre)
                </strong>
                <p>
                    <br><textarea disabled cols="75" rows="6" style="resize: none; border-style: none;">@Html.DisplayFor(modelItem => item.prod_detalle)</textarea>
                </p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prod_precio)
            </td>                                 
        </tr>
} 
  
    </tbody>
</table>